{
  "workflow": "search",
  "phases": {
    "pending": {
      "is_initial": true,
      "transitions_to": "searching",
      "on_error_transition_to": "error"
    },
    "searching": {
      "transitions_to": "fetching-pages",
      "on_error_transition_to": "error",
      "handlers": [
        "GoogleSearcher"
      ]
    },
    "fetching-pages": {
      "transitions_to": "finished",
      "on_error_transition_to": "error",
      "handlers": [
        "PageDownloader"
      ]
    },
    "error": {
      "is_final": true,
      "handlers": [
        "ErrorEmailer"
      ]
    },
    "finished": {
      "is_final": true,
      "handlers": [
        "JobFinisher"
      ]
    }
  }
}