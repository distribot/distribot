{
  "name": "search",
  "phases": [
    {
      "name": "pending",
      "is_initial": true,
      "transitions_to": "searching",
      "on_error_transition_to": "error"
    },
    {
      "name": "searching",
      "transitions_to": "fetching-pages",
      "on_error_transition_to": "error",
      "handlers": [
        "GoogleSearcher"
      ]
    },
    {
      "name": "fetching-pages",
      "transitions_to": "finished",
      "on_error_transition_to": "error",
      "handlers": [
        "PageDownloader"
      ]
    },
    {
      "name": "error",
      "is_final": true,
      "handlers": [
        "ErrorEmailer"
      ]
    },
    {
      "name": "finished",
      "is_final": true,
      "handlers": [
        "JobFinisher"
      ]
    }
  ]
}